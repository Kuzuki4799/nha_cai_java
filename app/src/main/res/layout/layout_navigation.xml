<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.navigation.NavigationView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/constaint"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0dp"
            android:background="@drawable/bg_background_menu"
            android:gravity="bottom"
            android:orientation="vertical"
            app:layout_constraintDimensionRatio="572:452"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dimen_150dp"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:src="@drawable/logo_horizon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dimen_15dp"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingTop="@dimen/margin_12dp"
            android:paddingEnd="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp"
            android:paddingBottom="@dimen/margin_12dp"
            app:layout_constraintTop_toBottomOf="@+id/constaint">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dimen_45dp"
                android:layout_height="@dimen/dimen_45dp"
                android:layout_gravity="center"
                android:padding="@dimen/margin_5dp"
                android:src="@drawable/ic_intro" />

            <TextView
                style="@style/textNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:text="@string/about"
                android:textSize="@dimen/text_size_16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dimen_15dp"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingTop="@dimen/margin_12dp"
            android:paddingEnd="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp"
            android:paddingBottom="@dimen/margin_12dp"
            app:layout_constraintTop_toBottomOf="@+id/llAbout">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dimen_45dp"
                android:layout_height="@dimen/dimen_45dp"
                android:layout_gravity="center"
                android:padding="@dimen/margin_5dp"
                android:src="@drawable/ic_customer" />

            <TextView
                style="@style/textNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:text="@string/code"
                android:textSize="@dimen/text_size_16sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.navigation.NavigationView>